                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/llingredientrow1"
                        android:layout_below="@id/search_page_textview_ingredient">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:background="@drawable/leftborder"
                            android:id="@+id/nation_rlayout_poultry">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="4dp"
                                    android:id="@+id/poultry_iv"
                                    android:gravity="center"
                                    android:src="@drawable/i17"
                                    />
