                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="12dp"
                                    android:layout_toEndOf="@id/beef_iv"
                                    android:text="Beef"/>
